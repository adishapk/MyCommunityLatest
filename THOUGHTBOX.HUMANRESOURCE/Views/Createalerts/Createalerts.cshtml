<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Alerts/Notifications</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <div class="col-md-6">

                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">New Alerts and Notifications can create here</h3>
                    </div>
                    <div class="card-body">
                        <form id="RegisterValidation">
                            <div class="field item form-group row">
                                <label>Select Employee<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-book"></i></span>
                                    </div>
                                    <select class="form-control has-feedback-left" id="frm_slctemployee" multiple required="required">
                                    </select>
                                </div>

                                <!-- /.input group -->
                            </div>

                            <div class="field item form-group row">
                                <label>Alert Message<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-book"></i></span>
                                    </div>
                                    <textarea rows="3" cols="150" placeholder="Alert Message" id="frm_alertmsge" class="form-control has-feedback-lef" maxlength="200" required></textarea>
                                    <input type="hidden" id="alert_id" />
                                </div>

                                <!-- /.input group -->
                            </div>

                            <div class="field item form-group row">
                                <label>Image Upload</label>

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-book"></i></span>
                                    </div>
                                    <input id="frm_photograph" type="file" class="file" data-show-upload="true" data-show-caption="true">
                                    <input id="hiddenphoto" type="hidden" />
                                    <span id="alert_image"></span>

                                </div>

                                <!-- /.input group -->
                            </div>

                            <div class="field item form-group row">
                                <label>Video Link</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-book"></i></span>
                                    </div>
                                    <input type="text" id="frm_Videolink" class="form-control has-feedback-lef" placeholder="Video Link" maxlength="200">
                                </div>

                                <!-- /.input group -->
                            </div>

                            <br /><br />
                            <div class="col-4">
                                <button type="button" id="btn_submit" class="btn btn-primary btn-block" value="Submit" onclick="alertsinsert()">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col (left) -->
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Created Alerts can View/Edit/Delete here</h3>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            <table id="tbl1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Alert Message</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>


                            </table>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col (right) -->
        </div>
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
