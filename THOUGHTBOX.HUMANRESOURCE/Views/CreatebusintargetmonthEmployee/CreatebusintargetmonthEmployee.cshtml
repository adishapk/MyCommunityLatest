<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <div class="col-md-12">

                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">New Division Name under a Department can create here</h3>
                    </div>
                    <div class="card-body">
                        <form id="RegisterValidation">
                            <div class="row">
                                <div class="col-6 field item form-group">

                                    <label>Select Year<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <select class="form-control has-feedback-left" id="frm_slctyear" required="required">
                                            <option value="select">--Choose an Option--</option>
                                            <option value="2020">2020</option>
                                            <option value="2021">2021</option>
                                        </select>
                                    </div>

                                    <!-- /.input group -->
                                </div>

                                <div class="col-6 field item form-group">
                                    <label>Yearly Allocated Amount</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <input type="text" id="frm_yearlyaloctedamnt" class="form-control has-feedback-lef" style="color:green;font-weight: bold;" placeholder="Allocated Amount" maxlength="20" disabled>
                                        <input type="hidden" id="target_id">
                                    </div>

                                    <!-- /.input group -->
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6 field item form-group">
                                    <label>Select Month<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <select class="form-control has-feedback-left" id="frm_slctmonth" required="required">
                                            <option value="select">--Choose an Option--</option>
                                            <option value="01">January</option>
                                            <option value="02">February</option>
                                            <option value="03">March</option>
                                            <option value="04">April</option>
                                            <option value="05">May</option>
                                            <option value="06">June</option>
                                            <option value="07">July</option>
                                            <option value="08">August</option>
                                            <option value="09">September</option>
                                            <option value="10">October</option>
                                            <option value="11">November</option>
                                            <option value="12">December</option>
                                        </select>
                                    </div>

                                    <!-- /.input group -->
                                </div>

                                <div class="col-6 field item form-group">

                                    <label>Monthly Allocated Amount</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <input type="text" id="frm_monthlyalloctedamnt" class="form-control has-feedback-lef" style="color:red;font-weight: bold;" placeholder="Allocated Amount" maxlength="20" disabled>

                                    </div>

                                    <!-- /.input group -->
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6 field item form-group">
                                    <label>Select Employee<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>

                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <select class="form-control has-feedback-lef" id="frm_slctemploy" required="required">
                                        </select>
                                    </div>

                                    <!-- /.input group -->
                                </div>

                                <div class="col-6 field item form-group">

                                    <label>Allocate Target<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <input type="text" id="frm_empallocatetarget" class="form-control has-feedback-lef" placeholder="Allocate Target" maxlength="20" required>

                                    </div>

                                    <!-- /.input group -->
                                </div>
                            </div>

                            

                            <br /><br />
                            <div class="col-4">
                                <button type="button" id="btn_submit" class="btn btn-primary btn-block" value="Submit" onclick="empmonthlytargetinsert()">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col (left) -->
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Created Divisions can View/Edit/Delete here</h3>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
