<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <div class="col-md-6">

                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">New Salary structure in Addition/Deletion can create here</h3>
                    </div>
                    <div class="card-body">
                        <form id="RegisterValidation">
                            <div class="field item form-group row">
                                <label>Select Salary Type<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-hand-holding-usd"></i></span>
                                    </div>
                                    <select class="form-control has-feedback-left" id="frm_salrytype" required="required">
                                        <option value="">Select</option>
                                        <option value="Addition">Addition</option>
                                        <option value="Deletion">Deletion</option>
                                    </select>
                                </div>

                                <!-- /.input group -->
                            </div>

                            <div class="field item form-group row">
                                <label>Salary Head<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-money-bill-alt"></i></span>
                                    </div>
                                    <input type="text" id="frm_salaryhead" class="form-control has-feedback-left" placeholder="Salary Head" maxlength="50" required>
                                    <input type="hidden" id="salstruct_id" />
                                </div>

                                <!-- /.input group -->
                            </div>


                            <br /><br />
                            <div class="col-4">
                                <button type="button" id="btn_submit" class="btn btn-primary btn-block" value="Submit" onclick="addsalarystructure()">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col (left) -->
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Created Salary Structure can View/Edit/Delete here</h3>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            <table id="tbl1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Salary Head</th>
                                        <th>Salary Type</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>


                            </table>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col (right) -->
        </div>
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>
