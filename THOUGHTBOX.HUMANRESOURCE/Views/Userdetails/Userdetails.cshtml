<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">User Details</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <div class="col-md-12">

                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">New User Details can create here</h3>
                    </div>
                    <div class="card-body">
                        <form id="RegisterValidation">
                            <div class="row">

                                <div class="col-6 field item form-group">
                                    <label>Select Category<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <select class="form-control has-feedback-left" id="frm_slctusertype" required="required" >
                                            <option value="select">--Choose an Option--</option>
                                            <option value="Associate">Associate</option>
                                            <option value="Client">Client</option>
                                            <option value="Companyemployee">Company Employee</option>
                                            <option value="Seller">Seller</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-6 field item form-group" id="frm_emphidden" style="display:none;">
                                    <label>Select Employee<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <select class="form-control has-feedback-left" id="frm_slctemployee" required="required">
                                        </select>
                                    </div>
                                </div>

                                <div class="col-6 field item form-group" id="frm_assoctehidden" style="display:none;">
                                    <label>Select Customer<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <select class="form-control has-feedback-left" id="frm_slctassociate" required="required">
                                        </select>
                                    </div>

                                </div>

                            </div>

                            <div class="row">
                                <div class="col-6 field item form-group" id="frm_usertypehidden" style="display:none;">
                                    <label>Select User Type<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <select class="form-control has-feedback-left" id="userType" required>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-6 field item form-group">
                                    <label>Active<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <select class="form-control has-feedback-left" id="frm_useractive" required="required">
                                            <option value="Y">Yes</option>
                                            <option value="N">No</option>
                                        </select>
                                    </div>

                                </div>

                            </div>

                            <div class="row">


                                <div class="col-6 field item form-group">
                                    <label>User Name<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>

                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <input type="text" id="frm_username" class="form-control has-feedback-left" placeholder="User Name" maxlength="20" required>
                                        <input type="hidden" id="user_id" />
                                    </div>
                                </div>

                                <div class="col-6 field item form-group">
                                    <label>Password<span class="required" style="color:red;font-weight: bold;font-size:large;">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-book"></i></span>
                                        </div>
                                        <input type="password" id="frm_usrpassword" class="form-control has-feedback-left" placeholder="Password" maxlength="20" required>
                                    </div>
                                </div>
                            </div>

                            <br /><br />
                            <div class="col-3">
                                <button type="button" id="btn_submit" class="btn btn-primary btn-block" value="Submit" onclick="userdetailsinsert()">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col (left) -->
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Created User Details can View/Edit/Delete here</h3>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            <table id="tbl1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>User Name</th>
                                        <th>Password</th>
                                        <th>Name</th>
                                        <th>User Type</th>
                                        <th>Category</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>


                            </table>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col (right) -->
        </div>
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
